<form id="add-todo-form" class="max-w-md mx-auto mt-8">
  <div class="flex items-center">
    <input
      id="new-todo-input"
      type="text"
      placeholder="Add a new todo"
      class="flex-grow px-4 py-2 border rounded-l-md focus:outline-none focus:ring-2 focus:ring-blue-500"
    />
    <button
      type="submit"
      class="px-4 py-2 bg-blue-500 text-white rounded-r-md hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500"
    >
      Add
    </button>
  </div>
</form>

<script>
  const form = document.getElementById('add-todo-form');
  const input = document.getElementById('new-todo-input');

  form.addEventListener('submit', (e) => {
    e.preventDefault();
    const text = input.value.trim();
    if (text) {
      const newTodo = { id: Date.now().toString(), text, completed: false };
      const event = new CustomEvent('newtodo', { detail: newTodo });
      document.dispatchEvent(event);
      input.value = '';
    }
  });
</script>
